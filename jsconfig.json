{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "~/components": ["./app/components"],
            "~/config": ["./app/config"],
            "~/constants": ["./app/constants"],
            "~/hooks": ["./app/hooks"],
            "~/localization": ["./app/localization"],
            "~/modals": ["./app/modals"],
            "~/store": ["./app/store"],
            "~/navigation": ["./app/navigation"],
            "~/screens": ["./app/screens"],
            "~/services": ["./app/services"],
            "~/styles": ["./app/styles"],
            "~/types": ["./app/types"],
            "~/utils": ["./app/utils"],
        }
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "bin",
        "__tests__",
        "ios",
        "android"
    ]
}